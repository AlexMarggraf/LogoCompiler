{
  "name": "logocompiler",
  "version": "1.0.0",
  "description": "A Compiler and Renderer vor the Logo implementation of the XLogoOnline Website",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "npx tsc && cpy music/*.mp3 dist/music/ && cpy deps/* dist/deps/ && esbuild dist/client.js --bundle --outfile=dist/out.js --format=esm --target=esnext --log-limit=0",
    "esbuild": "esbuild dist/client.js --bundle --outfile=dist/out.js --format=esm --target=esnext --log-limit=0 --watch",
    "dev": "concurrently \"npm run esbuild\" \"tsc -w\"",
    "start": "node dist/server.js",
    "test": "node --test ./dist/tests/*.js",
    "generateparser": "npx antlr4ng --generate-visitor -o src/xlogo_Parser/Parser src/xLogo_Parser/Grammar/XLogo.g4 && node scripts/parserPostProcess.js",
    "generate-parser": "antlr-ng --define language=TypeScript --generate-listener --generate-visitor --output-directory ./src/xLogo_parser/parser src/xLogo_parser/grammar/XLogo.g4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlexMarggraf/LogoCompiler.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/AlexMarggraf/LogoCompiler/issues"
  },
  "homepage": "https://github.com/AlexMarggraf/LogoCompiler#readme",
  "devDependencies": {
    "@types/escodegen": "^0.0.10",
    "@types/esprima": "^4.0.6",
    "@types/node": "^25.0.3",
    "concurrently": "^9.2.1",
    "cpy-cli": "^6.0.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "antlr-ng": "^1.0.10",
    "antlr4ng": "^3.0.16",
    "antlr4ts": "^0.5.0-alpha.4",
    "antlr4ts-cli": "^0.5.0-alpha.4",
    "better-turtle": "^1.5.2",
    "canvas": "^3.2.0",
    "esbuild": "^0.27.2",
    "escodegen": "^2.1.0",
    "esprima": "^4.0.1",
    "json-diff-ts": "^4.8.2"
  }
}
