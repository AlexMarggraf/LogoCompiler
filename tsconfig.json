{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "module": "es2022",
    "moduleResolution": "node",
    "target": "es2019", // esprima only supports upto this standard
    "lib": ["dom", "es2022"],

    "types": ["node"],

    "sourceMap": true,

    "strict": true,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "skipLibCheck": false
  }
}